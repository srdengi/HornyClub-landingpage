---
import '~/styles/styles.css';
import SEO from '../layouts/SEO.astro';

const title = "Launch Offer! WIN 200$";
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="icon" type="image/svg+xml" href="/logo.png" />
  <meta name="generator" content={Astro.generator} />
  <meta name="theme-color" content="#9EA3FA" />
  <SEO title={title} />
  <title>{title}</title>
  <link rel="stylesheet" href="/styles/styles.css" />
</head>
<body>
  <main>
    <div class="images-container">
      <div class="image left-image"></div>
      <div class="image right-image"></div>
    </div>

    <div class="form-container">
      <header>
        <h1>Launch Offer Requisites</h1>
        <h2>Win Your $200</h2>
        <p>Participate in our exclusive launch offer and stand a chance to win $200. <br> Fill out the form below to enter and receive an affiliate link to share with others!</p>
      </header>
      <form id="offer-form" action="https://formspree.io/f/xldrgqey" method="POST">
        <input type="hidden" name="_redirect" value="https://tusitio.com/thank-you">
        
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required>
        
        <label for="nickname">Nickname:</label>
        <input type="text" id="nickname" name="nickname" required>
        
        <label for="question1">Blondes or Brunettes?</label>
        <input type="text" id="question1" name="question1" required>
        
        <label for="question2">Tall or Short?</label>
        <input type="text" id="question2" name="question2" required>
        
        <label for="question3">Male or Female?</label>
        <input type="text" id="question3" name="question3" required>
        
        <div class="affiliate-link-container">
          <label for="affiliate-link">Affiliate Link:</label>
          <input type="text" id="affiliate-link" name="affiliate-link" readonly>
          <button type="button" id="generate-link">Generate Link</button>
        </div>
        
        <input type="submit" value="Submit">
      </form>
      
      <script>
        document.getElementById('generate-link').addEventListener('click', function() {
          const linkField = document.getElementById('affiliate-link');
          linkField.value = `https://your-affiliate-link.com/?ref=${Math.random().toString(36).substr(2, 9)}`;
        });
      </script>
  </main>
  <style>
    /* styles.css */

/* Asegúrate de que el body ocupe el 100% del viewport y tenga un margen de 0 */
body {
  margin: 0;
  height: 100vh;
  overflow: auto; /* Permite el desplazamiento */
  background-image: url('/images/fondo2.jpg');
  background-size: cover; /* La imagen cubre todo el área del body */
  background-position: center; /* La imagen está centrada */
  background-repeat: no-repeat; /* La imagen no se repite */
  background-attachment: fixed; /* La imagen se mantiene fija durante el desplazamiento */
  color: #f0f0f0; /* Color de texto claro */
  font-family: 'Arial', sans-serif;
  font-size: 16px;
  display: flex;
  justify-content: center;
  align-items: center;
}

main {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  max-width: 1200px; /* Ancho máximo para pantallas grandes */
  padding: 1rem;
  box-sizing: border-box;
}

.images-container {
  display: flex;
  width: 100%;
  justify-content: center;
  margin-bottom: 2rem;
}

.image {
  flex: 1;
  background-size: cover;
  background-position: center;
  height: 150px; /* Altura fija para las imágenes */
  margin: 0 0.5rem; /* Espaciado entre imágenes */
}

.left-image {
  background: url('/images/left-image.jpg') no-repeat center center;
}

.right-image {
  background: url('/path/to/right-image.jpg') no-repeat center center;
}

.form-container {
  width: 100%;
  max-width: 600px;
  background: url('/images/fondo2.jpg') no-repeat center center; /* Imagen de fondo */
  background-size: cover; /* Cubre todo el contenedor */
  padding: 1rem;
  border-radius: 8px;
  color: #f0f0f0; /* Asegúrate de que el texto sea visible sobre la imagen */
}

header {
  text-align: center;
  margin-bottom: 1.5rem;
}

header h1 {
  font-size: 1.5rem;
  margin: 0;
}

header h2 {
  font-size: 1.25rem;
  margin: 0.5rem 0;
}

header p {
  font-size: 0.875rem;
  margin-top: 0;
}

form {
  display: flex;
  flex-direction: column;
  width: 100%;
}

h3 {
  margin-top: 0;
  font-size: 1.25rem;
}

label {
  margin-bottom: 0.5rem;
  color: #f0f0f0;
}

input[type="text"],
input[type="email"] {
  padding: 0.5rem;
  margin-bottom: 1rem;
  border: 1px solid #555;
  border-radius: 4px;
  background: #333;
  color: #f0f0f0;
}

input[type="submit"] {
  background-color: #6200b3;
  color: #fff;
  border: none;
  padding: 0.5rem;
  border-radius: 4px;
  cursor: pointer;
  font-size: 1rem;
}

input[type="submit"]:hover {
  background-color: #7013bd;
}

.affiliate-link-container {
  margin-top: 1rem;
  display: flex;
  flex-direction: column;
}

.affiliate-link-container input {
  width: 100%;
  margin-bottom: 0.5rem;
}

.affiliate-link-container button {
  background-color: #163d61;
  color: #fff;
  border: none;
  padding: 0.5rem;
  border-radius: 4px;
  cursor: pointer;
}

.affiliate-link-container button:hover {
  background-color: #0f2a3d;
}

/* Estilos responsivos para pantallas pequeñas */
@media (max-width: 768px) {
  .images-container {
    flex-direction: column;
    align-items: center;
  }

  .image {
    width: 100%;
    height: auto;
    margin-bottom: 1rem;
  }
}

@media (max-width: 480px) {
  header h1 {
    font-size: 1.25rem;
  }

  header h2 {
    font-size: 1rem;
  }

  header p {
    font-size: 0.75rem;
  }
}

  </style>
</body>
</html>