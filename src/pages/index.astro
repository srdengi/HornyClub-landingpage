<Layout title="astro-cube">
  <style>
    .erotic-button {
      align-items: center;
      background-image: linear-gradient(144deg, #9843d4, #5643d3 50%, #246ad3);
      border: 0;
      border-radius: 8px;
      box-shadow: rgba(151, 65, 252, 0.2) 0 15px 30px -5px;
      box-sizing: border-box;
      color: #FFFFFF;
      display: flex;
      font-family: Phantomsans, sans-serif;
      font-size: 20px;
      justify-content: center;
      line-height: 1em;
      max-width: 100%;
      min-width: 140px;
      padding: 3px;
      text-decoration: none;
      user-select: none;
      -webkit-user-select: none;
      touch-action: manipulation;
      white-space: nowrap;
      cursor: pointer;
      margin: 20px 0;
      text-transform: uppercase;
    }

    .erotic-button:active,
    .erotic-button:hover {
      outline: 0;
    }

    .erotic-button span {
      background-color: rgb(5, 6, 45);
      padding: 16px 24px;
      border-radius: 6px;
      width: 100%;
      height: 100%;
      transition: 300ms;
    }

    .erotic-button:hover span {
      background: none;
    }

    @media (min-width: 768px) {
      .erotic-button {
        font-size: 24px;
        min-width: 196px;
      }
    }

    /* Estilos para el diseño responsivo */
    .flex-container {
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .content, .image {
      max-width: 100%;
    }

    .image img {
      width: 100%;
      height: auto;
      max-width: 500px; /* Ajusta el tamaño máximo de la imagen */
    }

    .centered-image {
      display: flex;
      justify-content: center;
      margin-top: 20px;
    }

    .centered-image img {
      max-width: 100%;
      height: auto;
      max-width: 800px; /* Ajusta el tamaño máximo de la imagen */
    }

    @media (min-width: 768px) {
      .flex-container {
        flex-direction: row;
        justify-content: space-between;
        align-items: flex-start;
      }

      .content {
        flex: 1;
        margin-right: 20px;
      }

      .image {
        flex: 0 0 auto;
      }

      .centered-image img {
        max-width: 700px; /* Ajusta el tamaño máximo de la imagen para pantallas grandes */
      }
    }



    .popup-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: none; /* Ocultar por defecto */
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.popup-content {
  background-image: url("/sorteo.gif"); /* Ruta al GIF */
  background-size: cover; /* Ajusta el tamaño del fondo para cubrir el contenedor */
  background-position: center; /* Centra el fondo */
  border-radius: 8px;
  padding: 20px;
  width: 80%;
  max-width: 600px;
  text-align: center;
  position: relative; /* Necesario para posicionar el botón de cierre */
  color: #fff; /* Ajusta el color del texto si es necesario para que contraste con el fondo */
}
.popup-content h2,
.popup-content p {
  visibility: hidden; /* Hacer que el texto sea invisible pero ocupe espacio */
}

.popup-close {
  position: absolute;
  top: 10px;
  right: 10px;
  background: #aaa;
  border: none;
  border-radius: 50%;
  width: 30px;
  height: 30px;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
}

.popup-close:hover {
  background: #888;
}

.popup-content h2 {
  margin-top: 0;
}

.popup-content p {
  margin-bottom: 20px;
}


