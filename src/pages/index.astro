---
import Layout from '../layouts/Layout.astro';
---


<Layout title="astro-cube">
  <style>
    .erotic-button {
      align-items: center;
      background-image: linear-gradient(144deg, #9843d4, #5643d3 50%, #246ad3);
      border: 0;
      border-radius: 8px;
      box-shadow: rgba(151, 65, 252, 0.2) 0 15px 30px -5px;
      box-sizing: border-box;
      color: #FFFFFF;
      display: flex;
      font-family: Phantomsans, sans-serif;
      font-size: 20px;
      justify-content: center;
      line-height: 1em;
      max-width: 100%;
      min-width: 140px;
      padding: 3px;
      text-decoration: none;
      user-select: none;
      -webkit-user-select: none;
      touch-action: manipulation;
      white-space: nowrap;
      cursor: pointer;
      margin: 20px 0;
      text-transform: uppercase;
    }

    .erotic-button:active,
    .erotic-button:hover {
      outline: 0;
    }

    .erotic-button span {
      background-color: rgb(5, 6, 45);
      padding: 16px 24px;
      border-radius: 6px;
      width: 100%;
      height: 100%;
      transition: 300ms;
    }

    .erotic-button:hover span {
      background: none;
    }

    @media (min-width: 768px) {
      .erotic-button {
        font-size: 24px;
        min-width: 196px;
      }
    }

    
  </style>

